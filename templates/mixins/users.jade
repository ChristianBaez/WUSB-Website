mixin sign-up()
	form(method='post', enctype='multipart/form-data', autocomplete='off', novalidate).form-horizontal.create-form.profile-form
		input(type='hidden', name='action', value='sign-up')

		.row: .col-sm-8.col-sm-offset-2

			h2 Sign up
			
			.form-group
				input(type='email', id='email', name='email', placeholder='email').input.input-xl.input-faded
				input(type='password', name='password', placeholder='password').input.input-xl.input-faded
				input(type='password', name='password_confirm', placeholder='password').input.input-xl.input-faded
			.form-group
				input(type='text', name='name.first', placeholder='First name').input.input-xl.input-faded
				input(type='text', name='name.last', placeholder='Last name').input.input-xl.input-faded
			.form-group
				button(type='submit', data-loading-text="Changing...").btn.btn-lg.btn-primary.btn-block Create user

mixin edit-profile()
	form(method='post', enctype='multipart/form-data', autocomplete='off', novalidate).form-horizontal.create-form.profile-form
		input(type='hidden', name='action', value='edit-profile')

		.row: .col-sm-8.col-sm-offset-2

			h2 Edit Profile
			
			.form-group
				if locals.user.hasProfilePicture
					img(src='/images/profile/' + locals.user.slug + '.jpg')
				label(for="profile_picture") Change profile picture
				input(type='file', id='profile_picture' name='profile_picture')
			.form-group
				label(for="email") Email
				input(type='email', value=locals.user.email, size="40", id='email', name='email', placeholder='email').input.input-xl.input-faded
			.form-group
				label(for="email") Name
				input(type='text', value=locals.user.name.first, name='name.first', placeholder='First name').input.input-xl.input-faded
				input(type='text', value=locals.user.name.last, name='name.last', placeholder='Last name').input.input-xl.input-faded
			.form-group
				label(for="password") Change password
				input(type='password', id="password", name='password', placeholder='password').input.input-xl.input-faded
				input(type='password', name='password_confirm', placeholder='password').input.input-xl.input-faded
			.form-group
				button(type='submit', data-loading-text="Changing...").btn.btn-lg.btn-primary.btn-block Save
